{
  "name": "pinkflow",
  "version": "1.0.0",
  "description": "Pinkflow CLI for MBTQ Universe automation - Deaf-first development orchestration",
  "main": "dist/cli.js",
  "type": "module",
  "bin": {
    "pinkflow": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "docs:export": "node scripts/export-mermaid.js",
    "docs:validate": "node scripts/validate-docs.js",
    "docs:sync": "node scripts/sync-notion.js"
  },
  "keywords": [
    "pinkflow",
    "mbtq",
    "deaf-first",
    "devops",
    "automation",
    "claude",
    "vercel",
    "github",
    "notion",
    "pinksync"
  ],
  "author": "360 Magicians Group",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1",
    "@octokit/rest": "^20.0.2",
    "@vercel/client": "^13.0.4",
    "@notionhq/client": "^2.2.14",
    "marked": "^9.1.6",
    "gray-matter": "^4.0.3",
    "socket.io-client": "^4.7.4",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/commander": "^2.12.2",
    "typescript": "^5.3.2",
    "tsx": "^4.6.2",
    "vitest": "^1.0.4",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "prettier": "^3.1.0",
    "@mermaid-js/mermaid-cli": "^10.6.1",
    "puppeteer": "^21.6.1",
    "markdownlint-cli": "^0.37.0",
    "@textlint/textlint": "^13.4.1",
    "@textlint/markdown": "^13.4.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/360magicians/pinkflow.git"
  },
  "bugs": {
    "url": "https://github.com/360magicians/pinkflow/issues"
  },
  "homepage": "https://github.com/360magicians/pinkflow#readme"
} 